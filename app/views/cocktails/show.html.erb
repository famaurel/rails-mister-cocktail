<div class="navbar-wagon">
  <h1>Cocktails</h1><i class="fas fa-cocktail"></i>
  <p><%= link_to "Back to the list", root_path, class: 'btn btn-primary' %></p>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo %>);">
  <div class="container">
    <h1>Make a <%= @cocktail.name %></h1>
  </div>
</div>

<div class="container show-container">
  <div class="container">
    <h3>Here's what you'll need:</h3>
    <% @doses.each do |dose| %>
      <p><%= "#{dose.ingredient.name} - #{dose.amount} #{dose.description}" %>
      <a> <i id="sweet-alert-demo" class="far fa-trash-alt"></i></a>
      <%= link_to "", cocktail_dose_path(dose), method: :delete, id: "delete-link"%>
        </p>
    <% end %>
  </div>

  <div class="container links">
    <p><%= link_to new_cocktail_dose_path(@cocktail.id) do %>
      <i class="fas fa-plus"></i>
      <% end %>
    </p>

  </div>
</div>
