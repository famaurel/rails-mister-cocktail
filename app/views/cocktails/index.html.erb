
<div class="navbar-wagon">
  <h1>Cocktails</h1><i class="fas fa-cocktail"></i>
  <%= link_to "Create a cocktail", new_cocktail_path, class: 'btn btn-primary' %>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-6 col-sm-4">
      <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.1)), url('<%= cl_image_path cocktail.photo %>')"><h3><%= cocktail.name %></h3>
        <div class="dose">
      <% cocktail.doses[0..1].each do |dose| %>
        <p class="ingredient"><%= dose.ingredient.name %>
        <% end %></p>
        </div>
      </div>
      <div class="card-info">
        <p class="info"><%= link_to "Read the full recipe", cocktail_path(cocktail)%></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
