<div class="container form-container">
  <h1>Add a dose to your cocktail</h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :amount %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit %>
  <% end %>
</div>

<button class="btn btn-primary"><%= link_to "Back to cocktail", cocktail_path(@cocktail) %></button>
